  <rule id="functionName">
    <one-of>
      <item>
        A <tag>out="Function A";</tag>
      </item>
      <item>
        B <tag>out="Function B";</tag>
      </item>
      <item>
        C <tag>out="Function C";</tag>
      </item>
      <item>
        1 <tag>out="Function 1";</tag>
      </item>
    </one-of>
  </rule>

  <rule id="doSomething">
    <one-of>
      <item>
        <ruleref uri="#callFunction"/>
        <tag>out.FunctionToCall=rules.latest()</tag>
      </item>
    </one-of>

  </rule>
</grammar>